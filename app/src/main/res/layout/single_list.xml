<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sektor"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_alignParentLeft="true"
                app:cardCornerRadius="10dp"
                android:layout_width="110dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_gambar"
                    android:scaleType="fitXY"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_nama_sektor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Lorem Ipsum"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/cv_image"/>


            <TextView
                android:id="@+id/tv_sektor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/tv_nama_sektor"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/cv_image"
                android:text="Lorem Ipsum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bidang"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sektor"
                android:text="Lorem Ipsum"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/cv_image"/>


            <ImageView
                android:id="@+id/iv_centang"
                android:background="@drawable/centang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="20dp"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_bidang"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/iconpariwisata"
            android:layout_width="35dp"
            android:layout_height="35dp"/>



    </androidx.cardview.widget.CardView>

</RelativeLayout>